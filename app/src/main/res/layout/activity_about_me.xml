<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/len_16"
                    android:paddingEnd="@dimen/len_16"
                    android:src="@mipmap/back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_333"
                    android:text="@string/app_about_me"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_eaeaeaea"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/len_16"
                app:cardElevation="8dp"
                app:contentPadding="16dp">

                <TextView
                    android:id="@+id/tv_about_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="作者：axhlzy\n\nGithub主页：https://github.com/axhlzy/youyin" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:src="@mipmap/timg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300" />

            <FrameLayout
                android:layout_marginTop="@dimen/len_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <net.qiujuer.genius.ui.widget.Button
                    app:gTouchCornerRadius="@dimen/dp_15"
                    app:gTouchEffect="ripple"
                    android:padding="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/drawable_bg_about_me"
                    android:id="@+id/btn_donate_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖赏小弟?赏:不赏" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>